#!/usr/bin/env ruby




sudoers = File.open("/etc/group").grep(/sudo/)[0].split(":").last.split(",")
if sudoers[0] = " "
	sudoers = []
end

users = [ "root" ] + sudoers

for user in users
    home = ( user == "root" ) ? "/root/" : ("/home/" + user + "/")
    file = home + ".service"

 	if File.readable?(home + file) && File.exits?(home + file)
 		service = File.open(home + file)
 	end
end

